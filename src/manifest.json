{
  "manifest_version": 2,
  "name": "Zoom to Fit",
  "version": "1.0.1",
  "description": "スクリーンのサイズに合わせてブラウザのズーム倍率を自動的に変更します。",
  "minimum_chrome_version": "42",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["zoom.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["size_checker.js"]
  }],
  "options_page": "options.html"
}
